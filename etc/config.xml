<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Store:etc/config.xsd">
	<default>
		<lof_slack_integration>
			<general>
				<enable>1</enable>
				<url>Lof Slack Integration</url>
				<channel>#general</channel>
				<footer>LandOfCoder</footer>
			</general>
			<new_order_notification>
				<enable>1</enable>
				<color>#ff0000</color>
			</new_order_notification>
			<new_review_notification>
				<enable>1</enable>
				<color>#ff0000</color>
			</new_review_notification>
			<new_contact_notification>
				<enable>1</enable>
				<color>#ff0000</color>
			</new_contact_notification>
			<new_customer_notification>
				<enable>1</enable>
				<color>#ff0000</color>
			</new_customer_notification>
		</lof_slack_integration>
	</default>
</config>
